<%= render 'shared/navbar' %>
<div class="mx-auto p-3" style="width: 500px;"></div>







<div class="container table-responsive-md">
	<table id="example" class="table table-striped table-bordered" style="width: 1000px;">
    <thead>
      <tr>
        <th><strong>Nuevo Comentario:</strong></th>

      </tr>
    </thead>

    <tbody>

        <tr>
          <td><% if @comment.commentable_type == 'place'%>
              <%= render 'form_with_plce', comment: @comment, place: @place %>
            <% elsif @comment.commentable_type == 'picture'%>
              <%= render 'form_with_picture', comment: @comment, picture: @picture %>
            <% else %>
              <%= render 'form', comment: @comment %>
            <% end %>

          <a class="badge badge-primary justify-content-center"<%= link_to 'Atras', comments_path %>
          </td>
       
        </tr>

    </tbody>
  </table>
</div>