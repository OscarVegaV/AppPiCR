<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>  <p id="notice"><%= notice %></p></strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<%= render 'shared/navbar' %>
<%= render 'shared/header' %>

<h1 class="text-center">Comentarios</h1>


<div class="container table-responsive-md">
	<table id="example" class="table table-striped table-bordered" style="width: 1000px;">
    <thead>
      <tr>
        <th>Contenido</th>
        <th>Comentario</th>

        <th colspan="5"></th>
      </tr>
    </thead>

    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.content%></td>
          <td><%= comment.user.name %></td>
          <td><%= comment.content %></td>
          <td><%= link_to 'Mostrar', comment %></td>
          <td><%= link_to 'Editar', edit_comment_path(comment) %></td>
          <td><%= link_to 'Eliminar', comment, method: :delete, data: { confirm: 'Esta usted seguro?' } %></td>
          <td><%= link_to 'Nuevo Comentario', new_comment_path %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <a class="badge badge-primary justify-content-center"<%= link_to 'Inicio', places_path %></a>
</div>